#jobs
  .job
    %h1= @task.title
    %p= @task.description
    %p= @task.company
    =link_to "Complete Task", @task.url, class: "btn btn-success"

#links
  = link_to "HOME", root_path, class: "btn btn-sm btn-default"
  = link_to "edit", edit_task_path(@task), class: "btn btn-sm btn-primary"
  = link_to "delete", task_path(@task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger"
